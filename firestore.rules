
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to projects
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true; // Only authenticated admin users can write
    }

    // Allow public read access to users for profile info, etc.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true || request.auth.uid == userId;
    }

    // Contact form submissions
    match /contacts/{contactId} {
      allow read: if request.auth != null && request.auth.token.admin == true; // Only admins can read
      allow write: if true; // Anyone can submit contact forms
      allow update: if request.auth != null && request.auth.token.admin == true; // Only admins can update
      allow delete: if request.auth != null && request.auth.token.admin == true; // Only admins can delete
    }
    
    // Proposal form submissions
    match /proposals/{proposalId} {
      allow read: if request.auth != null && request.auth.token.admin == true; // Only admins can read
      allow write: if true; // Anyone can submit proposal forms
      allow update: if request.auth != null && request.auth.token.admin == true; // Only admins can update
      allow delete: if request.auth != null && request.auth.token.admin == true; // Only admins can delete
    }
  }
}
